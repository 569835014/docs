.sidebar
  background: $grey.darken-3
  
  .vuetify
    font-weight: 100
    letter-spacing: .3rem
    text-align: center
    font-size: 4rem !important
    margin: 0
        
    .sidebar__logo
      display: block
      padding: 1rem 0
      position: relative
      border-bottom: 1px solid rgba(#fff, .1)
      margin-bottom: 1rem
      text-decoration: none
      
      img
        height: 100px
        
  .sidebar__item-header
    color: #fff
    
  .sidebar__item
    color: #fff
    
    &:hover
      background: rgba(255, 255, 255, .2)
      
    &--active
      background: rgba(255, 255, 255, .2)